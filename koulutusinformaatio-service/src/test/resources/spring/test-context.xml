<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       >

    <context:property-placeholder
            location="classpath:koulutusinformaatio.properties"
            ignore-resource-not-found="true"/>

    <bean id="mongodFactory" class="de.flapdoodle.embed.mongo.tests.MongodForTestsFactory" destroy-method="shutdown"/>
    <bean id="mongo" class="com.mongodb.MongoClient" factory-bean="mongodFactory" factory-method="newMongo"/>

    <bean id="morphia" class="org.mongodb.morphia.Morphia" />

    <bean id="primaryDatastore" class="org.mongodb.morphia.DatastoreImpl">
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg value="${mongo.test-db.name}"/>
    </bean>

    <bean id="secondaryDatastore" class="fi.vm.sade.koulutusinformaatio.dao.SecondaryDatastoreImpl">
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg value="${mongo.test-db.name}"/>
    </bean>

    <bean id="parentLearningOpportunitySpecificationDAO" class="fi.vm.sade.koulutusinformaatio.dao.ParentLearningOpportunitySpecificationDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="applicationOptionDAO" class="fi.vm.sade.koulutusinformaatio.dao.ApplicationOptionDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.test-db.name}"/>
    </bean>

    <bean id="learningOpportunityProviderDAO" class="fi.vm.sade.koulutusinformaatio.dao.LearningOpportunityProviderDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.test-db.name}"/>
    </bean>

    <bean id="childLearningOpportunityDAO" class="fi.vm.sade.koulutusinformaatio.dao.ChildLearningOpportunityDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="upperSecondaryLearningOpportunityDAO" class="fi.vm.sade.koulutusinformaatio.dao.UpperSecondaryLearningOpportunitySpecificationDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="specialLearningOpportunityDAO" class="fi.vm.sade.koulutusinformaatio.dao.SpecialLearningOpportunitySpecificationDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="modelMapper" class="org.modelmapper.ModelMapper"/>
</beans>
