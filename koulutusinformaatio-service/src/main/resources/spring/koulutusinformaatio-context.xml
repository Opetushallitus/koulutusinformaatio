    <context:component-scan base-package="fi.vm.sade.koulutusinformaatio"/>

    <bean id="HttpSolrServer"
          class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg>
            <value>${solr.base.url}</value>
        </constructor-arg>
    </bean>

    <bean id="loHttpSolrServer"
          class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg>
            <value>${solr.base.url}${solr.learningopportunity.url}</value>
        </constructor-arg>
    </bean>

    <bean id="aoHttpSolrServer"
          class="org.apache.solr.client.solrj.impl.HttpSolrServer">
        <constructor-arg>
            <value>${solr.base.url}${solr.applicationoption.url}</value>
        </constructor-arg>
    </bean>

    <bean id="morphia" class="com.google.code.morphia.Morphia" />

    <bean id="parentLearningOpportunityDAO" class="fi.vm.sade.koulutusinformaatio.dao.ParentLearningOpportunityDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="applicationOptionDAO" class="fi.vm.sade.koulutusinformaatio.dao.ApplicationOptionDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="learningOpportunityProviderDAO" class="fi.vm.sade.koulutusinformaatio.dao.LearningOpportunityProviderDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="modelMapper" class="org.modelmapper.ModelMapper"/>
</beans>