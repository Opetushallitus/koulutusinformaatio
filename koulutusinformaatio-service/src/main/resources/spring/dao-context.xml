<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="morphia" class="org.mongodb.morphia.Morphia" />

    <bean id="mongo" class="com.mongodb.MongoClient">
        <constructor-arg>
            <bean class="com.mongodb.MongoClientURI">
                <constructor-arg value="${mongodb.url}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="secondaryMongo" class="fi.vm.sade.koulutusinformaatio.dao.SecondaryMongoClient">
        <constructor-arg>
            <bean class="com.mongodb.MongoClientURI">
                <constructor-arg value="${mongodb.url}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="primaryDatastore" class="org.mongodb.morphia.DatastoreImpl">
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="secondaryDatastore" class="fi.vm.sade.koulutusinformaatio.dao.SecondaryDatastoreImpl">
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryMongo"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="applicationOptionDAO" class="fi.vm.sade.koulutusinformaatio.dao.ApplicationOptionDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="learningOpportunityProviderDAO" class="fi.vm.sade.koulutusinformaatio.dao.LearningOpportunityProviderDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="childLearningOpportunityDAO" class="fi.vm.sade.koulutusinformaatio.dao.ChildLearningOpportunityDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="dataStatusDAO" class="fi.vm.sade.koulutusinformaatio.dao.DataStatusDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>

    <bean id="pictureDAO" class="fi.vm.sade.koulutusinformaatio.dao.PictureDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="upperSecondaryLearningOpportunitySpecificationDAO" class="fi.vm.sade.koulutusinformaatio.dao.UpperSecondaryLearningOpportunitySpecificationDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

    <bean id="specialLearningOpportunitySpecificationDAO" class="fi.vm.sade.koulutusinformaatio.dao.SpecialLearningOpportunitySpecificationDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>
    
    <bean id="higherEducationLOSDAO" class="fi.vm.sade.koulutusinformaatio.dao.HigherEducationLOSDAO">
        <constructor-arg>
            <ref bean="mongo"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="morphia"/>
        </constructor-arg>
        <constructor-arg value="${mongo.db.name}"/>
    </bean>
    
    <bean id="koulutusLOSDAO" class="fi.vm.sade.koulutusinformaatio.dao.KoulutusLOSDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>
    
    <bean id="tutkintoLOSDAO" class="fi.vm.sade.koulutusinformaatio.dao.TutkintoLOSDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>
    
    <bean id="adultVocationalLOSDAO" class="fi.vm.sade.koulutusinformaatio.dao.AdultVocationalLOSDAO">
        <constructor-arg>
            <ref bean="primaryDatastore"/>
        </constructor-arg>
        <constructor-arg>
            <ref bean="secondaryDatastore"/>
        </constructor-arg>
    </bean>

</beans>